<div class="container">


  <h1><%= @activity.title %></h1>

  <div class="activity-show-wrapper">

    <div class="container">
      <div class="row">
        <div class="col">Atividade:</div>
        <div class="col"><%= @activity.title %></div>
        <div class="w-100"></div>
        <div class="col">Localização:</div>
        <div class="col"><%= @activity.location %></div>
        <div class="w-100"></div>
        <div class="col">Categoria:</div>
        <div class="col"><%= @activity.category %></div>
        <div class="w-100"></div>
        <div class="col">Início:</div>
        <div class="col"><%= @activity.initial_date %></div>
        <div class="w-100"></div>
        <div class="col">Fim:</div>
        <div class="col"><%= @activity.final_date %></div>
        <div class="w-100"></div>
        <div class="col">Criado por:</div>
        <div class="col"><%= link_to @activity.user.username, profile_path %></div>
      </div>
    </div>

  <div>
    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>


<% unless @exploration_act.include?(current_user) %>
  <%= simple_form_for [ @activity, @exploration ] do |f| %>
    <%= f.submit "Join this activity", class: "btn btn-primary" %>
  <% end %>
<% end %>

<% @exploration_act.each do |exploration| %>
  <%= exploration.username %>
<% end %>

<%= link_to "voltar", activities_path, class: "btn btn-primary"  %>
<br>
<% if @exploration_act.include?(current_user) %>
  <%= link_to "Go to chat!", chatroom_path(@chatroom), class: "btn btn-primary" %>
<% end %>
</div>



