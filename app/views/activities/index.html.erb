<h1>List of activities:</h1>

<div class="activities-wrapper">
  <% @activities.each do |activity| %>
    <%= link_to activity_path(activity), class: 'activities-card', :action => 'go' do %>
      <div class="activity-card">
        <%= activity.title %>
        <%= activity.location %> <%# NÃ£o coloquei description no index. Achei melhor deixar somente para o show. O que acham? %>
        <%= activity.initial_date %>
        <%= activity.final_date %>
        <% activity.latitude %><% activity.longitude %>
        <%= activity.user.username %>
      </div>
    <% end %>
  <% end %>
</div>
