<div class="container">

  <h1>Bora?</h1>

  <div class="card-product">
    <%= cl_image_tag('https://res.cloudinary.com/dhehnzh5i/image/upload/v1607449724/camera-removebg-preview_gdg6dm.png', :size => "100x100", :crop => :fill) %>
    <div class="card-product-infos">
    <% @activities.each do |activity| %>
      <%= link_to activity_path(activity), class: 'activities-card', :action => 'go' do %>
        <div class="activity-card">
          <h5><%= activity.title %></h5>
          <p><%= activity.location %></p>
          <%= activity.initial_date %>
          <%= activity.final_date %>
          <% activity.latitude %><% activity.longitude %>
          <%= activity.user.username %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

  

  <div class="activities-wrapper">
    
    <%= link_to "Adicionar uma atividade", new_activity_path %>
  </div>

  <div>
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>

</div>