<div class="container">
      <h3>Adicione uma nova atividade </h3>
  <div class="row">
    <div class="col-sm-12 col-lg-8">

      <div class='form-content'>
      <%= simple_form_for(@activity) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <br>
      <br>
        <div class="form-inputs fields">
          <%= f.input :title, :label => "Título" %>
          <%= f.input :category, as: :radio_buttons, collection: ['Ao ar livre',
           'Natureza', 'Aventura', 'Cultural', 'Festas', 'Bares', 'Shows', 'Gastronomia',
            'Compras', 'Transporte', 'Esportes', 'Outros'], wrapper: :vertical_collection_inline, :label => "Categoria" %>
          <%= f.input :location, :label => "Local" %>
          <%= f.input :description, :label => "Descrição" %>
          <%= f.input :initial_date, as: :string, required: false, input_html: {class: "datepicker"}, :label => "Data inicial" %>
          <%= f.input :final_date, as: :string, required: false, input_html: {class: "datepicker"}, :label => "Data final" %>
        </div>
        
        <div class="form-actions btn btn-warning">
          <%= f.button :submit, "Adicionar" %>
        </div>
        
        </div>
      <% end %>

    </div>
  </div>
</div>

  <%= render "shared/footer" %>