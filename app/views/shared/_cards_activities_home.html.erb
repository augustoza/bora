  <section id="card-activity" class="my-5 text-center">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="info-header mb-5">
            <h1 class="text-warning pb-3">
              Bora aglomerar?
            </h1>
            <p class="lead">
              Participe de atividades com pessoas de diversos países ou crie a sua própria atividade e conheça novos amigos!
            </p>
          </div>
        </div>
      </div>

      <div class="row activity-carousel">
        <% @activities.each do |activity| %>
          <div class="card-all w-100">
            <div class="card mx-1">
              <div class="card-body">
                <% case activity.category %>
                  <% when 'Ao ar livre'%>
                  <%= image_tag('aoarlivre.png') %>
                  <% when 'Natureza' %>
                  <%= image_tag('natureza.png') %>
                  <% when 'Aventura' %>
                  <% when 'Cultural' %>
                  <% when 'Festas' %>
                  <% when 'Bares' %>
                  <% when 'Shows' %>
                  <% when 'Gastronomia' %>
                  <% when 'Compras' %>
                  <% when 'Transporte' %>
                  <% when 'Esportes'%>
                  <%= image_tag('esportes.png') %>
                  <% when 'Outros'%>
                  <%= image_tag('outros.png') %>
                  <% else %>
                  <img src="https://images.unsplash.com/photo-1592249503965-c3c7806f9074?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=801&q=80" alt="" class="img-fluid rounded-circle w-50 mb-3">
                <% end %>
                <h3><%= activity.title %></h3>
                <h5 class="text-muted"><%= activity.location %></h5>
                <p><%= activity.user.username %></p>
                <div class="d-flex justify-content-center">
                  <div class="p-2">
                    <%= link_to "Bora!?", activity_path(activity), class: "btn btn-outline-warning x1" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </section>
