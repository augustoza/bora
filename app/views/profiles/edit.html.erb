  <div class="edit-title">
    <h1>Altere seu perfil</h1>
  </div>

    <div class="row edit-form">
      <div class="col-sm-12 col-lg-6">
        <div class="edit-profile">
          <%= simple_form_for @user, url: profile_path, method: 'patch'  do |f| %>
            <%= f.input :full_name, label: 'Full name:', placeholder:'FullName' %>
            <%= f.input :about, placeholder: 'About', label: 'About me:' %>
            <%= f.input :country, placeholder:'Country', label: 'Country:', collection: User::LIST_OF_COUNTRIES %>
            <%= f.input :genre, prompt: 'Gender', label: 'Gender:', collection: User::GENRES %>
            <%= f.input :username, placeholder:'Username',label: 'Username:' %>
            <%= f.input :photo, as: :file %>
