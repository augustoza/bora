<div class="container">
  <h1 class='Username-show'><%=@user.username%></h1>
  <%= render 'shared/flag', link: @country_code.downcase %>

    
    <div class='User-show'>
      Name: <%= @user.full_name %>
      <br>
      Gender: <%= @user.genre %>
      <br>
      Country: <%= @user.country %>
      <br>
      Location: <%= @user.location %>
      <br>
      About: <%= @user.about %>
    </div>
      

  <br>
  <br>
  <%= link_to "Avaliar este usuÃ¡rio", new_profile_review_path(@user) %>
  <div id="review_rating">
    <% if @average_rating != nil %>
    <% @average_rating.times do %>
      <i class="fas fa-star"></i>
    <% end  %>
    <% (5 - @average_rating).times do %>
      <i class="far fa-star"></i>
    <% end  %>
    <% end %>
    <%= link_to "Ver reviews", profile_reviews_path(@user) %>
  </div>
  <br>
  <h5>Atividades</h5>
  <% if @explorations != nil %>
  <% @explorations.each do |exploration| %>
    <%= exploration.activity.title %>
  <% end %>
  <% end %>
   <br>
  <%= link_to "Voltar", :back %>
</div>

