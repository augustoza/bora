<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.css" />
</head>

<!-- PAGE HEADER -->
  <header id="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6 m-auto text-center">
          <h1><%= @user.username %> </h1>
          <p><%= @user.country %> <%= render 'shared/flag', link: @country_code.downcase %> </p>
        </div>
      </div>
    </div>
  </header>

  <!-- ABOUT SECTION -->
  <section id="about" class="py-3">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h4>Quem sou eu</h4>
            <div class='User-show'>
              <p> 
                Nome: <%= @user.full_name %>
                <br>
                Genêro: <%= @user.genre %>
                <br>
                Onde estou agora: <%= @user.location %>
                <br>
              </p>
              <br>
              <h4>Mais sobre mim:</h4>
                <p>
                  <%= @user.about %>
                </p>
            </div> 
        </div>
        <div class="col-md-6">
          <% if current_user.facebook_picture_url %>
          <%= image_tag current_user.facebook_picture_url, class: "img-fluid rounded-circle d-none d-md-block about-img" %>
            <% elsif current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "img-fluid rounded-circle d-none d-md-block about-img" %>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1511765392540-a4f3d816bfbb?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80", class: "img-fluid rounded-circle d-none d-md-block about-img" %>
          <% end %>
      </div>
    </div>
  </section>

<section id="testimonials" class="p-4 bg-dark text-white">
    <div class="container">
      <h2 class="text-center">Avaliações de <%= @user.username %> </h2>
      <h4 class="text-center"> 
        <% if @average_rating != nil %>
        <% @average_rating.times do %>
          <i class="fas fa-star"></i>
        <% end  %>
        <% (5 - @average_rating).times do %>
          <i class="far fa-star"></i>
        <% end  %>
        <% end %>        
      </h3>
      
      <div class="row text-center">
        <div class="col">
          <div class="slider">
            <div>
              <blockquote class="blockquote">
                <p class="mb-0">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit. Fugit, quaerat.
                </p>
                <footer class="blockquote-footer">John Doe From
                  <cite title="Company 1">Company 1</cite>
                </footer>
              </blockquote>
            </div>
            <div>
              <blockquote class="blockquote">
                <p class="mb-0">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit. Fugit, quaerat.
                </p>
                <footer class="blockquote-footer">Sam Smith From
                  <cite title="Company 2">Company 2</cite>
                </footer>
              </blockquote>
            </div>
            <div>
              <blockquote class="blockquote">
                <p class="mb-0">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit. Fugit, quaerat.
                </p>
                <footer class="blockquote-footer">Meghan Williams From
                  <cite title="Company 3">Company 3</cite>
                </footer>
              </blockquote>
            </div>
          </div>
        </div>
      </div>
    </div>



 <br>
  <br>
  <%= link_to "Avaliar este usuário", new_profile_review_path(@user) %>
  <div id="review_rating">
    <% if @average_rating != nil %>
    <% @average_rating.times do %>
      <i class="fas fa-star"></i>
    <% end  %>
    <% (5 - @average_rating).times do %>
      <i class="far fa-star"></i>
    <% end  %>
    <% end %>
    <%= link_to "Ver reviews", profile_reviews_path(@user) %>
  </div>
  <br>
  <h5>Atividades</h5>
  <% if @explorations != nil %>
  <% @explorations.each do |exploration| %>
    <%= exploration.activity.title %>
  <% end %>
  <% end %>
   <br>
  <%= link_to "Voltar", :back %>
</div>


<%= render "shared/showcarousel" %>
<%= render "shared/footer" %>