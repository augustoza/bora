<span id="user_id" data-id="<%= current_user.id %>"></span>

<div class="container">
  <div class="row">
    <div class="chatroom-body">
    <div class="col-lg-8">
      <div class="chatroom-title">
      <h4><strong>Chat: </strong><%= @activity.title %></h4>
      </div>
    <div class="chat-back">
        <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
          <% @chatroom.messages.each do |message| %>
            <%= render 'messages/message', message: message %>
          <% end %>
        </div>
    </div>

      <div class="text-field">
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
          <%= f.input :content, label: false, placeholder: "Digite sua mensagem" %>
          <%= f.submit "Enviar", class: 'btn btn-warning' %>
        <% end %>
      </div>
      <div class="link-chat">
        <%= link_to "Retornar Ã  atividade", activity_path(@activity) %>
      </div>
    </div>
  </div>
</div>
</div>

<%= render "shared/footer" %>